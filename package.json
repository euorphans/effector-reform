{
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lerna": "^8.0.2",
    "prettier": "^3.2.5",
    "vite": "^5.3.1",
    "vite-plugin-babel": "^1.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "scripts": {
    "build": "lerna run build && npm run update-deps",
    "update-deps": "lerna exec npm install",
    "test": "lerna run test",
    "publish": "npm run build && npm run test && lerna publish",
    "publish:canary": "npm run build && lerna publish --canary --preid dev --npm-tag next --no-git-tag-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "effector": "^23.2.2",
    "effector-react": "^23.2.1",
    "patronum": "^2.2.0"
  }
}
